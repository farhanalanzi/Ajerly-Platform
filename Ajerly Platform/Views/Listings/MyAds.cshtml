@model IEnumerable<Ajerly_Platform.Models.Listing>

<h2>إعلاناتي</h2>

<div class="listings-grid" id="myListingsContainer">
    @foreach (var item in Model)
    {
        <div style="position:relative;">
        <a class="listing-link" href="@Url.Action("Details","Listings", new { id = item.Id })" style="text-decoration:none; color:inherit;">
            <div class="listing-card" data-category="@item.Category" data-id="@item.Id">
                <div class="listing-image">
                    @* If there are images, render the first one. Otherwise render an empty white area without borders. Use FirstOrDefault() to be null-safe *@
                    @{ var firstImage = item.Images?.FirstOrDefault()?.ImageUrl; }
                    @if (!string.IsNullOrEmpty(firstImage))
                    {
                        <img src="@Url.Content(firstImage)" alt="@item.Title" />
                    }
                    else
                    {
                        <div class="empty-image" aria-hidden="true"></div>
                    }
                </div>
                <div class="listing-info">
                    <span class="listing-tag">عرض</span>
                    <h3>@item.Title</h3>
                    <p class="desc">@item.Description</p>
                    <p class="meta"><strong>السعر:</strong> @item.Price ريال</p>
                </div>
            </div>
        </a>
        <div style="position:absolute; top:8px; left:8px; display:flex; gap:8px;">
            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit","Listings", new { id = item.Id })">تعديل</a>
            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","Listings", new { id = item.Id })">حذف</a>
        </div>
        </div>
    }
</div>
