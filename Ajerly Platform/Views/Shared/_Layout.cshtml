@using Microsoft.AspNetCore.Identity
@using Ajerly_Platform.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Ajerly_Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Ajerly_Platform.styles.css" asp-append-version="true"/>
</head>
<body>
<nav class="custom-navbar">
    <div class="nav-right">
        <button class="btn-run" onclick="location.href='@Url.Action("Index","Home")'">
            <span class="icon">✏️</span>
          اجرلي
        </button>
    </div>

    <div class="nav-left">
        @if (!SignInManager.IsSignedIn(User))
        {
            <a class="btn-login" href="/Identity/Account/Login">دخول</a>
            <a class="btn-register" href="/Identity/Account/Register">تسجيل</a>
        }
        else
        {
            var currentUser = UserManager.GetUserAsync(User).Result;
            var displayName = currentUser?.FullName ?? currentUser?.UserName ?? User.Identity?.Name;
            <div class="dropdown">
                <button class="btn-register dropdown-toggle" type="button" id="accountMenu" data-bs-toggle="dropdown" aria-expanded="false">
                    حسابي (@displayName)
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountMenu">
                    <li><a class="dropdown-item" href="@Url.Action("MyAds","Listings")">إعلاناتي</a></li>
                    <li><a class="dropdown-item" href="/Identity/Account/Manage">معلوماتي</a></li>
                    <li><a class="dropdown-item" href="/Identity/Account/Manage">تغيير كلمة المرور</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li>
                        <!-- Open a confirmation page instead of directly posting logout -->
                        <a class="dropdown-item" href="/Identity/Account/Logout">تسجيل خروج</a>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>



@RenderBody()

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>

</html>