@page
@model Ajerly_Platform.Areas.Identity.Pages.Account.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="create-section" style="max-width:600px;margin:40px auto;">
    <h1>تسجيل الدخول</h1>
    <p>أدخل بياناتك لتسجيل الدخول إلى حسابك</p>

    <form asp-area="Identity" asp-page="/Account/Login" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="ReturnUrl" type="hidden" />

        <div class="form-group">
            <label asp-for="Input.Email">البريد الإلكتروني</label>
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="البريد الإلكتروني" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">كلمة المرور</label>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="كلمة المرور" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group" style="display:flex;align-items:center;justify-content:flex-end;gap:12px;">
            <label style="display:flex;align-items:center;gap:8px;"><input asp-for="Input.RememberMe" type="checkbox" /> تذكرني</label>
        </div>

        <button type="submit" class="btn-publish">تسجيل الدخول</button>

        <div style="margin-top:16px;text-align:center;">
            <span>ليس لديك حساب؟</span>
            <a href="/Identity/Account/Register"> إنشاء حساب</a>
        </div>
    </form>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</section>
